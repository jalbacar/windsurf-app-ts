{
  "name": "express-typescript-server",
  "version": "1.0.0",
  "description": "Servidor web con Node.js, Express y TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "build:clean": "rimraf dist && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:debug": "ts-node-dev --respawn --transpile-only --inspect -- src/index.ts",
    "dev:watch": "nodemon --watch src/**/*.ts --exec ts-node src/index.ts",
    "build:start": "npm run build && npm run start",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "node scripts/lint-format.js check",
    "fix": "node scripts/lint-format.js fix",
    "test": "jest",
    "update-check": "npx npm-check -u",
    "update-check:prod": "npx npm-check --production",
    "update-check:dev": "npx npm-check --dev"
  },
  "keywords": [
    "express",
    "typescript",
    "node",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "npm-check": "^6.0.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
